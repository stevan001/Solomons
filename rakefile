require 'rubygems'
require 'albacore' 

task :default=>[:hello_world, :compile ]

desc 'Say Hello'
task :hello_world do 
   puts 'Hello World'
end 

desc "Complile the solution" 
msbuild :compile do |msb|
  msb.properties :configuration => :Debug 
  msb.targets :Build
  msb.solution ="Solomons.sln"
end 

desc "Run Tests"
nunit :test do |nunit|
   nunit.command = "build/Utils/Nunit/nunit-console.exe"
   nunit.assemblies "Source/ProdigyProducts.Test/bin/Debug/ProdigyProducts.Test.dll"
end 
